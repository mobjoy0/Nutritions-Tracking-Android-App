<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
            <gradient
                android:startColor="#4a010d"
                android:endColor="#D20A2E"
                android:angle="90" />
        </shape>
    </item>
</layer-list>
